                          Duration="00:00:04" 
                          Stretch="Uniform" StrokeThickness="1"
                          Stroke="Black"></hc:AnimationPath>
        </Border>


        <ListView
            x:Name="lvItems"
            Grid.Row="2"
            Width="590"
            Height="515"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            Grid.RowSpan="4"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0 5 0 0" d:ItemsSource="{d:SampleData ItemCount=5}"
           
            >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="590"
                Height="200"
                >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height ="1*"/>
                                <RowDefinition Height ="1*"/>
                                <RowDefinition Height ="1*"/>
                                <RowDefinition Height ="1*"/>
                                <RowDefinition Height ="1*"/>
                                <RowDefinition Height ="1*"/>

                            </Grid.RowDefinitions>

                            <Image 
                    x:Name="imgMerch"
                    Grid.Row="0"
                    Grid.RowSpan="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Width="150"
                    >
                                <Image.Source>
                                    <Binding Path="Photo"/>
                                </Image.Source>
                            </Image>
                            
                            <TextBlock
                    x:Name="txtName"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Grid.Column="2"
                    Grid.ColumnSpan="4"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Text="{Binding Name}"
                    
                    TextWrapping="Wrap"
                    FontFamily="Century"
                    FontSize="16"
                    />

                            <StackPanel
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Grid.Row="3"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    >
                                <TextBlock
                        x:Name="txtSize"
                        Text="{Binding SizeSelect}"
                        Grid.Column="2"
                        FontWeight="Bold"
                        Grid.ColumnSpan="2"
                        Grid.Row="2"
                        FontFamily="Century"
                        TextAlignment="Center"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="55"
                        />

                                <Button
                        x:Name="btnIncrease"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Grid.Row="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Width="10"                     
                        Height="10"
                        Margin="20 0 0 0"
                        Background="Black"
                        Click="btnIncrease_Click"
                        />
                                
                                <TextBlock
                        x:Name="txtQty"
                        Text="{Binding Qty}"
                        FontFamily="Century"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="5 0 0 0"
                        Foreground="Black"
                        />
                                <Button
                        x:Name="btnDecrease"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Grid.Row="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Width="10"                     
                        Height="10"
                        Margin="5 0 0 0"
                        Background="Black"
                        Click="btnDecrease_Click"
                        />
                            </StackPanel>

                            <TextBlock
                    x:Name="txtPrice"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Grid.Row="2"
                    Grid.RowSpan="2"
                    FontFamily="Century"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="{Binding TotalPrice, StringFormat=\{0\} ₽}"
                    TextAlignment="Left"
                    FontWeight="Bold"
                    />


                            <Image 
                    Grid.Column="2"
                    Grid.Row="2"
                    Height="20"
                    Width="20"
                    Source="/Assets/Icons/clothes-hanger.png"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="-25 0 0 0"
                    />

                            <Image 
                    Grid.Column="6"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="20"
                    Source="/Assets/Icons/close_2.png"
                   
                    />

                            <Button
                    x:Name="btnRemove"
                    Grid.Column="6"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="25"
                    Width="25"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="1"
                                Click="btnRemove_Click"
                    />


                            <Button 
                    x:Name="btnLike_temp"
                    Content="♡ Купить позже"
                  
                    Margin="0 0 0 5"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Height="30"
                    FontFamily="Century"
                    FontSize="16"
                    Grid.Row="4"
                    Grid.RowSpan="2"
                    Foreground="Black"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Click="btnLike_temp_Click"
                    hc:FloatingBlock.Duration="0:0:1" 
                    hc:FloatingBlock.VerticalOffset="-20" 
                    hc:FloatingBlock.ToX="0" 
                    hc:FloatingBlock.ToY="-80">
                                <hc:FloatingBlock.ContentTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="♥" FontSize="30"/>

                                    </DataTemplate>
                                </hc:FloatingBlock.ContentTemplate>
                            </Button>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
